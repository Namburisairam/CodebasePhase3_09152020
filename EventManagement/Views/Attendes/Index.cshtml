@model IEnumerable<EventManagement.DataAccess.DataBase.Model.Attende>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row topbar">
            <div class="col-md-10">
                <h2>All Attendees</h2>
            </div>
            <div class="col-md-2">
                <text class="btn btn-primary button">@Html.ActionLink("Create New", "Create")</text>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row spaceing">

            

            <div class="box box-primary">
                @*<div class="box-header with-border">*@
                    <table class="table box box-primary">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Thumbnail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FacebookURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TwitterURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InstagramURL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedON)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedBY)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <img height="50" width="50" src="@MvcCustom.ImagePath(item.Thumbnail)" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FacebookURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TwitterURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InstagramURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedON)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedBY)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td class="textColor">
                                       <text class="btn btn-warning"> @Html.ActionLink("Edit", "Create", new { id = item.ID })</text> |
                                       <text class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.ID }) </text>
                                        @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>

        </div>
    </section>
</div>